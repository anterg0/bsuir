<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="lab1.Progress">
    <Grid RowDefinitions="*,*,*" ColumnDefinitions="*">
        <Label x:Name="ProgressLabel" Text="Welcome to .NET MAUI!" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"></Label>
        <ProgressBar x:Name="PBar"  WidthRequest="300" Grid.Row="1"></ProgressBar>
        <HorizontalStackLayout Grid.Row="2" HorizontalOptions="Center" Spacing="20">
            <Button Text="Start" FontSize="40" HeightRequest="75" WidthRequest="150"></Button>
            <Button Text="Stop" FontSize="40" HeightRequest="75" WidthRequest="150"></Button>
        </HorizontalStackLayout>    
    </Grid>    
</ContentPage>