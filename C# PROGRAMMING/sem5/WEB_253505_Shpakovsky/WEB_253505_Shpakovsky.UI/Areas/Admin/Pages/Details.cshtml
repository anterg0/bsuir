@page
@model WEB_253505_Shpakovsky.UI.Areas.Admin.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Movie Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Movie.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Movie.Description</dd>
        <dt class="col-sm-2">Duration</dt>
        <dd class="col-sm-10">@Model.Movie.Duration</dd>
        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@Model.Movie.Rating</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Movie.Category.Name</dd>
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10"><img src="@Model.Movie.Image" alt="@Model.Movie.Name" style="max-width: 200px;" /></dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Movie.ID" class="btn btn-primary">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
