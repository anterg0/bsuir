#include <iostream>

int main(){
    std::cout << "Цель задания: Найти кол-во пар инверсий внутри 
массива.\nВыполнил Шпаковский А.В.\nВариант 12.\n";
    start:int n, count = 0;
    std::cout << "Введите кол-во элементов массива: ";
    std::cin >> n;
    int array[n];
    std::cout << "Введите элементы массива: ";
    for(int i = 0; i < n; i++) {
        std::cin >> array[i];
    }
    for (int i = 0; i < n - 1; i++) {
        if (array[i] > array[i + 1]) count++;
    }
    std::cout << "Кол-во пар инверсий: " << count;
    er:std::cout << "\nЖелаете повторить? (y/n)";
    char a;
    std::cin >> a;
    switch(a) {
        case 'y':
            goto start;
            break;
        case 'n':
            return 0;
            break;
        default:
            goto er;
            break;
    }
}

